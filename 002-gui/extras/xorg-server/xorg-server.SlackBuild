	#--localstatedir=/var \
	#--buildtype=release \
	#-Dsystemd_logind=false \
	#-Dint10=x86emu \
	#-Ddefault_font_path=${DEF_FONTPATH} \
	#-Dmodule_dir=/usr/lib64/xorg/modules \
	#-Dxkb_dir=/usr/share/X11/xkb \
	#-Dxkb_output_dir=/var/lib/xkb \
	#-Dudev=true \
