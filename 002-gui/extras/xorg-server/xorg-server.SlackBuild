	#-Dxephyr=true

#DESTDIR=$PKG ninja -j${NUMBERTHREADS} install

# we're building this because Slackware enables 'systemd-logind' which breaks our openbox session autologin

CFLAGS="$GCCFLAGS" \
./configure \
	--prefix=/usr \
	--libdir=/usr/lib${SYSTEMBITS} \
	--sysconfdir=/etc \
	--localstatedir=/var \
	--infodir=/usr/info \
	--mandir=/usr/man \
	--with-pic \
	--with-int10=x86emu \
	--with-default-font-path="${DEF_FONTPATH}" \
	--with-module-dir=/usr/lib64/xorg/modules \
	--with-xkb-path=/usr/share/X11/xkb \
	--with-xkb-output=/var/lib/xkb \
	--enable-config-udev \
	--enable-year2038 \
	--enable-xorg \
	--enable-glamor \
	--enable-kdrive \
	--enable-install-setuid \
	--disable-systemd-logind \
	--disable-xvfb \
	--disable-xnest \
	--disable-config-hal \
	--disable-xephyr \
	--disable-unit-tests \
	--disable-docs \
	--disable-devel-docs \
	--disable-static

make -j${NUMBERTHREADS} install DESTDIR="$PKG"

find $PKG -type f -name "*.la" -exec rm -f {} \;

mkdir -p $PKG/install
cat $CWD/slack-desc > $PKG/install/slack-desc

cd $PKG
makepkg ${MAKEPKGFLAGS} $MODULEPATH/packages/$PRGNAM-$VERSION-$ARCH-1.txz